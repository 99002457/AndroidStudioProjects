<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303030"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="237dp"
        android:background="#353434"
        android:gravity="bottom|right"
        android:padding="10dp"
        android:textColor="#FF3D00"
        android:textColorHighlight="#FF3D00"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_alignBottom="@id/textView7"
        android:layout_marginTop="397dp"
        android:layout_marginBottom="-88dp"
        android:background="#353434"
        android:gravity="bottom|right"
        android:padding="10dp"
        android:textColor="#FD8A65"
        android:textSize="24sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="405dp"
        android:layout_alignBottom="@id/textView8"
        android:layout_marginBottom="-406dp"
        android:background="#DCD4D4">

        <Button
            android:id="@+id/three"
            android:layout_width="95dp"
            android:layout_height="72dp"
            android:layout_marginBottom="1dp"
            android:background="@android:drawable/checkbox_off_background"
            android:text="3"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/dot"
            app:layout_constraintEnd_toStartOf="@+id/plus"
            app:layout_constraintStart_toEndOf="@+id/two"
            app:layout_constraintTop_toBottomOf="@+id/six" />

        <Button
            android:id="@+id/mod"
            android:layout_width="95dp"
            android:layout_height="72dp"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="30dp"
            android:background="@android:drawable/checkbox_off_background"
            android:text="%"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/zero"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/one" />

        <Button
            android:id="@+id/dot"
            android:layout_width="95dp"
            android:layout_height="72dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="30dp"
            android:background="@android:drawable/checkbox_off_background"
            android:text="."
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/equals"
            app:layout_constraintStart_toEndOf="@+id/zero"
            app:layout_constraintTop_toBottomOf="@+id/three" />

        <Button
            android:id="@+id/equals"
            android:layout_width="95dp"
            android:layout_height="72dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="33dp"
            android:background="@android:drawable/checkbox_off_background"
            android:text="="
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dot"
            app:layout_constraintTop_toBottomOf="@+id/plus" />

        <Button
            android:id="@+id/zero"
            android:layout_width="95dp"
            android:layout_height="72dp"
            android:layout_marginBottom="33dp"
            android:background="@android:drawable/checkbox_off_background"
            android:text="0"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dot"
            app:layout_constraintStart_toEndOf="@+id/mod"
            app:layout_constraintTop_toBottomOf="@+id/two" />

        <Button
            android:id="@+id/one"
            android:layout_width="95dp"
            android:layout_height="72dp"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginBottom="1dp"
            android:background="@android:drawable/checkbox_off_background"
            android:text="1"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/mod"
            app:layout_constraintEnd_toStartOf="@+id/two"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/four" />

        <Button
            android:id="@+id/plus"
            android:layout_width="95dp"
            android:layout_height="72dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:background="@android:drawable/checkbox_off_background"
            android:text="+"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/equals"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/three"
            app:layout_constraintTop_toBottomOf="@+id/minus" />

        <Button
            android:id="@+id/four"
            android:layout_width="95dp"
            android:layout_height="72dp"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:background="@android:drawable/checkbox_off_background"
            android:text="4"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/one"
            app:layout_constraintEnd_toStartOf="@+id/five"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seven" />

        <Button
            android:id="@+id/minus"
            android:layout_width="95dp"
            android:layout_height="72dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:background="@android:drawable/checkbox_off_background"
            android:text="-"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/plus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/six"
            app:layout_constraintTop_toBottomOf="@+id/mul" />

        <Button
            android:id="@+id/six"
            android:layout_width="95dp"
            android:layout_height="72dp"
            android:background="@android:drawable/checkbox_off_background"
            android:text="6"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/three"
            app:layout_constraintEnd_toStartOf="@+id/minus"
            app:layout_constraintStart_toEndOf="@+id/five"
            app:layout_constraintTop_toBottomOf="@+id/nine" />

        <Button
            android:id="@+id/five"
            android:layout_width="95dp"
            android:layout_height="72dp"
            android:background="@android:drawable/checkbox_off_background"
            android:text="5"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/two"
            app:layout_constraintEnd_toStartOf="@+id/six"
            app:layout_constraintStart_toEndOf="@+id/four"
            app:layout_constraintTop_toBottomOf="@+id/eight" />

        <Button
            android:id="@+id/ac"
            android:layout_width="95dp"
            android:layout_height="72dp"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="12dp"
            android:background="@android:drawable/checkbox_off_background"
            android:text="AC"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/seven"
            app:layout_constraintEnd_toStartOf="@+id/c"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/c"
            android:layout_width="95dp"
            android:layout_height="72dp"
            android:layout_marginTop="12dp"
            android:background="@android:drawable/checkbox_off_background"
            android:text="C"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/eight"
            app:layout_constraintEnd_toStartOf="@+id/abs"
            app:layout_constraintStart_toEndOf="@+id/ac"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/abs"
            android:layout_width="95dp"
            android:layout_height="72dp"
            android:layout_marginTop="12dp"
            android:background="@android:drawable/checkbox_off_background"
            android:text="^"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/nine"
            app:layout_constraintEnd_toStartOf="@+id/slash"
            app:layout_constraintStart_toEndOf="@+id/c"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/slash"
            android:layout_width="95dp"
            android:layout_height="72dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:background="@android:drawable/checkbox_off_background"
            android:text="/"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/mul"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/abs"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/seven"
            android:layout_width="95dp"
            android:layout_height="72dp"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="22dp"
            android:layout_marginBottom="1dp"
            android:background="@android:drawable/checkbox_off_background"
            android:text="7"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/four"
            app:layout_constraintEnd_toStartOf="@+id/eight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ac" />

        <Button
            android:id="@+id/mul"
            android:layout_width="95dp"
            android:layout_height="72dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="1dp"
            android:background="@android:drawable/checkbox_off_background"
            android:text="x"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/minus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/nine"
            app:layout_constraintTop_toBottomOf="@+id/slash" />

        <Button
            android:id="@+id/nine"
            android:layout_width="95dp"
            android:layout_height="72dp"
            android:layout_marginBottom="1dp"
            android:background="@android:drawable/checkbox_off_background"
            android:text="9"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/six"
            app:layout_constraintEnd_toStartOf="@+id/mul"
            app:layout_constraintStart_toEndOf="@+id/eight"
            app:layout_constraintTop_toBottomOf="@+id/abs" />

        <Button
            android:id="@+id/eight"
            android:layout_width="95dp"
            android:layout_height="72dp"
            android:layout_marginBottom="1dp"
            android:background="@android:drawable/checkbox_off_background"
            android:text="8"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/five"
            app:layout_constraintEnd_toStartOf="@+id/nine"
            app:layout_constraintStart_toEndOf="@+id/seven"
            app:layout_constraintTop_toBottomOf="@+id/c" />

        <Button
            android:id="@+id/two"
            android:layout_width="95dp"
            android:layout_height="72dp"
            android:layout_marginBottom="1dp"
            android:background="@android:drawable/checkbox_off_background"
            android:text="2"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/zero"
            app:layout_constraintEnd_toStartOf="@+id/three"
            app:layout_constraintStart_toEndOf="@+id/one"
            app:layout_constraintTop_toBottomOf="@+id/five" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>